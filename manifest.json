{
  "manifest_version": 3,
  "name": "SoulVerse",
  "version": "1.0",
  "description": "A peaceful new tab showing daily Bible stories, Ethiopian date, and spiritual imagery.",
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": ["storage", "alarms"],
  "host_permissions": [
    "https://ethiopian-date-api.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "images/default1.jpg"
  }
}
